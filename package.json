{
  "name": "root",
  "private": true,
  "type": "module",
  "description": "Rocket Presets",
  "repository": "git@github.com:bennypowers/rocket-presets.git",
  "license": "MIT",
  "workspaces": [
    "presets/*",
    "test"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "clean": "rimraf 'presets/!(esbuild-plugin-replace)/**/!(declaration|*.src).d.ts'",
    "analyze": "yarn clean && yarn wsrun --exclude-missing analyze",
    "release": "run-s release:*",
    "release:docs": "yarn analyze",
    "release:publish": "changeset publish",
    "test": "run-s test:*",
    "test:build": "cd test && yarn rocket build",
    "test:playwright": "yarn playwright test",
    "snapshot": "yarn playwright test -u"
  },
  "dependencies": {
    "@changesets/cli": "^2.16.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.12",
    "@playwright/test": "1.12.3",
    "@pwrs/eslint-config": "^0.0.21",
    "@rocket/cli": "^0.9.8",
    "@rocket/search": "^0.4.1",
    "@small-tech/esm-tape-runner": "^1.0.3",
    "@web/test-runner": "^0.13.13",
    "cem-plugin-readme": "0.1.3",
    "chalk": "^4.1.1",
    "hirestime": "^6.1.0",
    "mime-types": "^2.1.31",
    "npm-run-all": "^4.1.5",
    "package-json-types": "^1.0.2",
    "patch-package": "^6.4.7",
    "playwright": "^1.12.3",
    "plugins-manager": "^0.2.4",
    "tap-spec": "^5.0.0",
    "tape": "^5.2.2",
    "typescript": "^4.3.5",
    "wsrun": "^5.2.4"
  }
}
